{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/pay",
      "dest": "index.js"
    },
    {
      "src": "/check-status",
      "dest": "index.js"
    },
    {
      "src": "/webhook",
      "dest": "index.js"
    },
    {
      "src": "/debug-payments",
      "dest": "index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}